modules = ["python-3.11", "postgresql-16", "nodejs-22"]
[agent]
expertMode = true
integrations = ["python_database:1.0.0"]

[nix]
channel = "stable-25_05"
packages = ["cacert", "cargo", "glibcLocales", "libffi", "libiconv", "libuv", "libxcrypt", "libyaml", "openssl", "pkg-config", "rustc"]

[workflows]
runButton = "Clean Application Start"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Backend API"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Frontend Production"

[[workflows.workflow]]
name = "Backend API Server"
author = 48243134
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd backend && uv run uvicorn main:app --host 0.0.0.0 --port 8000 --reload"

[[workflows.workflow]]
name = "Backend API"
author = "agent"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd backend && python -m uvicorn main:app --host 0.0.0.0 --port 8000 --reload"
waitForPort = 8000

[[workflows.workflow]]
name = "Start Application"
author = 49361797
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd backend && uv run uvicorn main:app --host 0.0.0.0 --port 8000"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd frontend && npm run web"

[[workflows.workflow]]
name = "Start Full Application"
author = 49362085
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd backend && uv run uvicorn main:app --host 0.0.0.0 --port 8000 --reload"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd frontend && node combined-server.js"

[[workflows.workflow]]
name = "Frontend Production"
author = "agent"
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd frontend && node production-server.js"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow]]
name = "Run Application"
author = 49362156
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd backend && python -m uvicorn main:app --host 0.0.0.0 --port 8000 --reload"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd frontend && node production-server.js"

[[workflows.workflow]]
name = "Clean Application Start"
author = 49362156
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd backend && python -m uvicorn main:app --host 0.0.0.0 --port 8000 --reload"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd frontend && pkill -9 -f \"node.*expo\" ; pkill -9 -f \"node.*production-server\" ; sleep 2 && node production-server.js"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 37059
externalPort = 80

[[ports]]
localPort = 8000
externalPort = 8000

[deployment]
deploymentTarget = "autoscale"
run = ["bash", "-c", "cd backend && uv run uvicorn main:app --host 0.0.0.0 --port 8000 & cd frontend && EXPO_DEVTOOLS_LISTEN_ADDRESS=0.0.0.0 npx expo start --web --port 5000"]
build = ["bash", "-c", "cd frontend && npm install && cd ../backend && uv sync"]
